const btn = document.getElementById('recordBtn');
const visualizer = document.getElementById('visualizer');
const resultArea = document.getElementById('result');

btn.onclick = async () => {
    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é –∑–∞–≥—Ä—É–∑–∫–∏
    visualizer.style.display = 'flex';
    btn.innerText = '–°–ª—É—à–∞—é...';
    btn.disabled = true;

    try {
        // –ó–¥–µ—Å—å –≤–∞—à –∫–æ–¥ –∏–∑ –ø—Ä–µ–¥—ã–¥—É—â–µ–≥–æ –æ—Ç–≤–µ—Ç–∞ –¥–ª—è –∑–∞–ø–∏—Å–∏ –∏ fetch –Ω–∞ —Å–µ—Ä–≤–µ—Ä
        // –î–ª—è –ø—Ä–∏–º–µ—Ä–∞ –ø—Ä–æ—Å—Ç–æ –∏–º–∏—Ç–∏—Ä—É–µ–º –∑–∞–¥–µ—Ä–∂–∫—É:
        setTimeout(() => {
            visualizer.style.display = 'none';
            btn.innerText = 'üé§ –°–ª—É—à–∞—Ç—å';
            btn.disabled = false;
            resultArea.innerHTML = `<strong>Queen</strong> ‚Äî Bohemian Rhapsody`;
        }, 5000);
        
    } catch (err) {
        alert("–û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ –º–∏–∫—Ä–æ—Ñ–æ–Ω—É");
        visualizer.style.display = 'none';
    }
};
